<div class="container mt-5">
  <div class="row">
    <div class="col-6 mb-5">
      <%= cl_image_tag @outfit.photo.key, height: 750, width: 500, crop: :fill %>
    </div>

    <div class="col-6">
      <div>
        <H2><%= @outfit.title %></H2>
        <div class="mt-2" id="show">
          <p>Category : <%= @outfit.category %></p>
        </div>
        <div class="mt-4">
          <p><%= @outfit.description %></p>
        </div>
        <div class="mt-2">
          <p>
            <i class="fa-solid fa-ruler-vertical"></i>
            Size : <%= @outfit.size %>
          </p>
        </div>
        <div class="mt-2">
          <p>
            <i class="fa-solid fa-money-bill"></i>
            Rs <%= @outfit.price_per_day %> /Day
          </p>
        </div>
        <div class="d-flex my-4">
          <% if policy(@outfit).edit? %>
            <%= link_to 'edit', edit_outfit_path, class: "btn btn-outline-primary"%>
          <% end %>
          <div class="ms-4"></div>
            <% if policy(@outfit).destroy? %>
              <%= link_to "delete", outfit_path(@outfit), class: "btn btn-outline-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this outfit?" } %>
            <% end %>
          </div>
        </div>
          <div class="col-4">
            <div class="flat-show-card">
              <h5>Book this outfit!</h5>
              <%= simple_form_for([@outfit, @booking]) do |f| %>
                <%= f.input :start_time , label: 'From :' , html5: true %>
                <%= f.input :end_time , label: 'To :' , html5: true %>
                <%= f.input :total_price %>
                <%= f.submit class: "btn btn-primary"%>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
