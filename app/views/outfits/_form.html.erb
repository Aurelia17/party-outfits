<%= simple_form_for(outfit) do |f| %>
  <%= f.input :title %>
  <%= f.input :category, collection: [['SELECT-ONE', 'Please select a category'], ['WEDDING', 'Wedding'], ['FORMAL-OUTFIT', 'Formal outfit'], ['PARTY-COSTUME', 'Party costume']], label_method: :second, value_method: :first, include_blank: false %>
  <%= f.input :description %>
  <%= f.input :size %>
  <%= f.input :price_per_day %>
  <%= f.input :photo, as: :file %>
  <%= f.submit class: "btn btn-primary"%>
<% end %>
