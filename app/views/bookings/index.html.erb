<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1530103862676-de8c9debad1d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1770&q=80);">
  <div class="container">
    <h1>My bookings</h1>
  </div>
</div>

<div class="container py-5">
  <div>
    <p>Note that if you cancel your booking, you will not be refunded.</p>
  </div>
  <div class="cards">
    <% @bookings.each do |booking| %>
      <% if @user.id == booking.user_id %>
        <div class="card">
          <% if booking.outfit.photo.attached? %>
          <%= cl_image_tag booking.outfit.photo.key, crop: :fill,  class:"cards-img"%>
          <div class="card-body">
            <h5 class="card-title"><%= booking.outfit.title %></h5>
            <div class="card-center">
              <p class="card-text">
                <i class="fa-regular fa-calendar"></i>
                 From : <%= booking.start_time %>
              </p>
                <p class="card-text">
                <i class="fa-solid fa-calendar"></i>
                   To : <%= booking.end_time %>
              </p>
              <p class="card-text">
                <i class="fa-solid fa-money-bill"></i>
                   Total Price :Rs  <%= booking.total_price %>
              </p>
              <%= link_to "Cancel Booking", booking_path(booking), class: "btn btn-outline-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this outfit?" } %>
            </div>
          </div>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
