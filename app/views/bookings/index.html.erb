<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1530103862676-de8c9debad1d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1770&q=80);">
  <div class="container">
    <h1>My bookings</h1>
  </div>
</div>

<div class="container py-5">
  <div class="cards">
      <% @bookings.each do |booking| %>
        <% if @user.id == booking.user_id %>
          <div class="card" style="width: 18rem;">
            <div class="card-body">
              <h5 class="card-title"><%= booking.start_time %></h5>
              <h5 class="card-title"><%= booking.end_time %></h5>
              <h5 class="card-title"><%= booking.total_price %> MUR</h5>
            </div>
          </div>
        <% end %>
      <% end %>
  </div>
</div>
